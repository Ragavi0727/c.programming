#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main(){
    int n,num,i;
    int positivecount=0,negativecount=0;
    scanf("%d",&n);
    for(i=0;i<n;i++)
    {
        scanf("%d",&num);
        if(num>0)
            positivecount ++;
        else 
            if(num<0)
                negativecount ++;
    }
    printf("Count of Positive Integer is %d.00\n",positivecount);
    printf("Count of Negative Integer is %d.00\n",negativecount);
    return 0;
}
