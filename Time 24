#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
int hr,min,sec;
    scanf("%d\n",&hr);
    scanf("%d\n",&min);
    scanf("%d\n",&sec);
    hr=hr+min/60;
    min=min+sec/60;
    sec=sec%60;
    min=min%60;
    printf("Total Number of hours is %d\n",hr);
    printf("Total Number of minutes is %d\n",min);
    printf("Total Number of seconds is %d\n",sec);
    return 0;
}
